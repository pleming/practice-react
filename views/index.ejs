<!DOCTYPE html>
<html>
<head>
    <title>Hello React</title>
    <script crossorigin src="https://unpkg.com/react@16/umd/react.production.min.js"></script>
    <script crossorigin src="https://unpkg.com/react-dom@16/umd/react-dom.production.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/babel-core/5.8.23/browser.min.js"></script>

    <script type="text/babel">
        class PaletteComponent extends React.Component {
            constructor(props) {
                super(props);

                this.paletteStyle = {
                    width: 240,
                    height: 240,
                    boxShadow: "0px 0px 25px 0px #333",
                    marginBottom: 15,
                    backgroundColor: this.props.bgColor
                };
            }

            componentWillReceiveProps(props) {
                this.paletteStyle.backgroundColor = props.bgColor;
            }

            render() {
                return (
                    <div key={this.paletteStyle.backgroundColor} style={this.paletteStyle}></div>
                );
            }
        }

        class ColorSelectComponent extends React.Component {
            constructor(props) {
                super(props);

                this.inputStyle = {
                    padding: 10,
                    fontSize: 16,
                    border: "2px solid #CCC"
                }

                this.buttonStyle = {
                    padding: 10,
                    fontSize: 16,
                    margin: 10,
                    backgroundColor: "#666",
                    color: "#FFF",
                    border: "2px solid #666"
                }
            }

            render() {
                return (
                    <form onSubmit={this.props.setNewColorHandler}>
                        <input ref={this.props.colorInput} placeholder="Enter a color value" style={this.inputStyle} onChange={this.props.changeHandler}/>
                        <button type="submit" style={this.buttonStyle}>go</button>
                    </form>
                );
            }
        }

        class ColorComponent extends React.Component {
            constructor(props) {
                super(props);

                this.state = {
                    bgColor: "#FFF",
                    color: "#FFF"
                }

                this.colorInput = React.createRef();

                this.changeColor = this.changeColor.bind(this)
                this.setNewColor = this.setNewColor.bind(this)
            }

            changeColor(e) {
                this.setState({
                    color: e.target.value
                });
            }

            setNewColor(e) {
                e.preventDefault();

                this.setState({
                    bgColor: this.state.color
                });

                this.colorInput.current.value = "";
                this.colorInput.current.focus();
            }

            render() {
                return (
                    <div>
                        <PaletteComponent bgColor={this.state.bgColor}/>
                        <ColorSelectComponent colorInput={this.colorInput} setNewColorHandler={this.setNewColor} changeHandler={this.changeColor}/>
                    </div>
                );
            }
        }

        class ContainerComponent extends React.Component {
            constructor(props) {
                super(props);

                this.containerStyle = {
                    padding: 50,
                    backgroundColor: "#FFF"
                };
            }

            render() {
                return (
                    <div style={this.containerStyle}>
                        <ColorComponent/>
                    </div>
                );
            }
        }

        ReactDOM.render(
            <div>
                <ContainerComponent/>
            </div>,
            document.querySelector("#container")
        )
    </script>
</head>
<body>
<div id="container"></div>
</body>
</html>
