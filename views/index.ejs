                            eget neque.
                        </p>
                    </div>
                );
            }
        }

        class AppFrameComponent extends React.Component {
            render() {
                return (
                    <div>
                        <h1>Simple SPA</h1>
                        <ul className="header">
                            <li>Home</li>
                            <li>Stuff</li>
                            <li>Contact</li>
                        </ul>
                        <div className="content">
                            <HomeComponent/>
                        </div>
                    </div>
                );
            }
        }

        ReactDOM.render(
            <ReactRouterDOM.BrowserRouter>
                <div>
                    <ReactRouterDOM.Route path="/" component={AppFrameComponent}></ReactRouterDOM.Route>
                </div>
            </ReactRouterDOM.BrowserRouter>,
            document.querySelector("#container")
        );
    </script>
</head>
<body>
